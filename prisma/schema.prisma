datasource db {
    provider = "mongodb"
    url      = env("MONGODB_URI_DEV")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id       String @id @default(auto()) @map("_id") @db.ObjectId
    username String @unique
    slug     String @unique
    refId    String @unique @default(uuid())
    email    String @unique
    password String
    // template Template[]
}

model Template {
    id        String   @id @default(auto()) @map("_id") @db.ObjectId
    slug      String   @unique
    refId     String   @unique @default(uuid())
    title     String
    body      String
    // user      User     @relation(fields: [userId], references: [refId])
    // userId    String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
